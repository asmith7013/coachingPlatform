{
  "manifest_version": 3,
  "name": "Zearn Export Automation",
  "version": "1.0",
  "description": "Automates Zearn login and student progress export",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["https://www.zearn.org/*", "http://localhost:3000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
